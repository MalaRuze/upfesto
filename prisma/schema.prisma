datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String       @id @default(uuid())
  title       String
  description String?
  location    String?
  imageUrl    String?
  dateCreated DateTime     @default(now())
  dateUpdated DateTime     @updatedAt
  dateFrom    DateTime
  dateTo      DateTime?
  host        User         @relation(fields: [hostId], references: [id])
  hostId      String
  Attendances Attendance[]

  @@index([hostId])
}

model User {
  id              String       @id
  firstName       String
  lastName        String
  fullName        String
  email           String       @unique
  profileImageUrl String?
  eventsHosted    Event[]
  Attendances     Attendance[]
}

model Attendance {
  id       String   @id @default(uuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  eventId  String
  event    Event    @relation(fields: [eventId], references: [id])
  response Response

  @@index([userId])
  @@index([eventId])
}

enum Response {
  YES
  NO
  MAYBE
}
